@model FestivalTicketsApp.WebUI.Models.Event.EventDetailsViewModel

<div class="container h-100 d-flex flex-column">
    <h1 class="fw-bold">@Model.Event.Title</h1>
    @{
        <div class="row mt-4">
            @{ 
                <div class="col-8">                
                    @{ await Html.RenderPartialAsync("DescriptionPart", Model.Event); }
                </div>
                
                <div class="col-4">                
                    @{ await Html.RenderPartialAsync("DetailsPart", Model.Event); }
                </div>
            }
        </div>
        await Html.RenderPartialAsync("SameHostEventsPart", Model.HostedEvents);
    }
</div>